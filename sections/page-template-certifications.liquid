<section>
  <div class="page-width">
    
    <h1 class="title">{{ page.title }}</h1>
    
    <div class="grid desktop-only">
      <div class="grid__item medium-up--one-half">
        
        {% for block in section.blocks %}
        
        {% if block.type == 'certifications' %}
        
        <div class="certifications-block vertical-center">
          <div class="certification-image">
            {% if block.settings.certifications %}
            <img class="lazyload" data-src="{{ block.settings.certifications }}" />
            {% endif %}
          </div>
          <div class="certification-text">
            <h4>{{ block.settings.certification_title }}</h4>
            {{ block.settings.certification_text }}
          </div>
        </div>
        
        {% endif %}
        
        {% endfor %}
        
      </div>
      <div class="grid__item medium-up--one-half">
        {% if section.settings.banner_image %}
        <img class="lazyload" data-src="{{ section.settings.banner_image | img_url: '650x' }}" />
        {% endif %}
      </div>
    </div>
    
    <div class="grid mobile-only">
      <div class="slider our-certification-slider">
        {% for block in section.blocks %}
          {% if block.type == "certifications" %}
          <div>
            <div class="certifications-block">
              <div class="certification-image">
                {% if block.settings.certifications %}
                <img class="lazyload" data-src="{{ block.settings.certifications }}" />
                {% endif %}
              </div>
              <div class="certification-text">
                <h4>{{ block.settings.certification_title }}</h4>
                <!-- control arrows -->
                <div class="certification-slick-prev">
                  {% include 'icon-chevron-left' %}
                </div>
                <div class="certification-slick-next">
                  {% include 'icon-chevron-right' %}
                </div>
                {{ block.settings.certification_text }}
              </div>
            </div>
          </div>
          {% endif %}
        {% endfor %}
      </div>
      
    </div>
    
  </div>
</section>

<script>
  $('.our-certification-slider').slick({
    dots: true,
    prevArrow: $('.certification-slick-prev'),
    nextArrow: $('.certification-slick-next'),
    infinite: true,
//     fade: true,
    swipe:true,
//     adaptiveHeight: true,
    //     autoplay: true,
    speed: 500,
    responsive: [
      {
        breakpoint: 750,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });
</script>


{% schema %}
  {
    "name": "Certifications Section",
	"class": "certifications-section",
    "settings": [
		{
			"type"  :  "image_picker",
			"id"    :  "banner_image",
			"label" :  "Banner Image"
		}
	],
	"blocks": [
		{
			"type"  :  "certifications",
			"name"  :  "Certification",
			"settings": [
				{
					"type"  :  "url",
					"id"    :  "certifications",
					"label" :  "Certification SVG URL"
				},
				{
					"type"  :  "text",
					"id"    :  "certification_title",
					"label" :  "Certification Title"
				},
				{
					"type"  :  "richtext",
					"id"    :  "certification_text",
					"label" :  "Certification Content"
				}
			]
		}
	]
  }
{% endschema %}

