				{
					"type"  :  "text",
					"id"    :  "logo_text",
					"label" :  "Logo Text"
 				}
			]
		},
		{
			"type"  :  "mobile_logo",
			"name"  :  "Mobile Logo",
			"settings": [
				{
					"type"  :  "image_picker",
					"id"    :  "logo",
					"label" :  "Logo",
					"info"  :  "width: 700px recommend"
				},
				{
					"type"  :  "text",
					"id"    :  "logo_text",
