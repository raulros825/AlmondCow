<section class="home-recipe">

  <div class="page-width">
    <div class="grid text-center">
      <h4 class="title">{{ section.settings.title }}</h4>

      <!-- Slider -->

      <div class="slider responsive">

        {% for block in section.blocks %}                

        {% if block.type == 'recipe' %}

        <div>

          <a href="{{ block.settings.category_link }}">
            
            <div class="main-img-hover-effect">

              <img data-lazy="{{ block.settings.category_image | img_url: '350x' }}" />

            </div>

            <h5>{{ block.settings.category_name }}</h5>
          </a>

        </div>

        {% endif %}

        {% endfor %}

      </div>
      <!-- control arrows -->
      <div class="home-slick-prev">
        {% include 'icon-chevron-left' %}
      </div>
      <div class="home-slick-next">
        {% include 'icon-chevron-right' %}
      </div>
    </div>
    <div class="text-center">
      <a href="{{ section.settings.button_url }}">
        <input type="button" class="btn main-btn" value="{{ section.settings.button_text }}" />
      </a>
    </div>
  </div>
  
</section>


<script>
  
  $('.responsive').slick({
    dots: true,
    infinite: true,
    lazyLoad: 'ondemand',
    //     autoplay: true,
    slidesToShow: 3,
    slidesToScroll: 3,
    speed: 3000,
    prevArrow: $('.home-slick-prev'),
    nextArrow: $('.home-slick-next'),
    responsive: [
      {
        breakpoint: 750,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 2,
          speed: 2000,
          
        }
      },
      {
        breakpoint: 481,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1,
          speed: 1000,
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
  });
  
</script>



{% schema %}
  {
    "name": "Home Recipe Section",
    "settings": [
		{
			"type"  :  "text",
			"id"    :  "title",
			"label" :  "Title"
		},
		{
			"type"  :  "url",
			"id"    :  "button_url",
			"label" :  "Button URL"
		},
		{
			"type"  :  "text",
			"id"    :  "button_text",
			"label" :  "Button Label"
		}
	],
	"blocks":[
		{
			"type"  :  "recipe",
			"name"  :  "Recipe List",
			"settings":[
				{
					"type"  :  "image_picker",
					"id"    :  "category_image",
					"label" :  "Category Image"
				},
				{
					"type"  :  "url",
					"id"    :  "category_link",
					"label" :  "Category Link"
				},
				{
					"type"  :  "text",
					"id"    :  "category_name",
					"label" :  "Category Name"
				}
			]
		}
	],
	"presets": [
		{
			"name"  :  "Home Recipe Section",
			"category" :  "Custom Section"
		}
	]
  }
{% endschema %}

