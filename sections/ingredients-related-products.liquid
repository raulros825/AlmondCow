<section>
  <div class="page-width">
    <h3 class="headline">{{ section.settings.title }}</h3>

    <div class="slider-part">
      <div class="slider ingredient-product-related">
        {%- assign grid_image_width = '200x200' -%}
        {%- assign grid_image_scale = '2' -%}
        
        {% for block in section.blocks %}
        
          <!--  Product - Bulk Organic Cashew Pieces - 3lb -->
          {% if product.id == 5604200743064 and block.type == 'cashew' %}
            <div>
              <div class="product-blocks" style="box-shadow: -3px 3px 6px 3px {{ block.settings.box_shadow_color }};">
                {% assign product_ob = all_products[block.settings.product_url] %}
                {% include 'product-card-grid-related' with product: product_ob %}
              </div>
            </div>
          {% endif %}
        
          <!--  Product - Bulk Organic Whole Grain Oats - 3lb -->
          {% if product.id == 4383776276580 and block.type == 'oats' %}
            <div>
              <div class="product-blocks" style="box-shadow: -3px 3px 6px 3px {{ block.settings.box_shadow_color }};">
                {% assign product_ob = all_products[block.settings.product_url] %}
                {% include 'product-card-grid-related' with product: product_ob %}
              </div>
            </div>
          {% endif %}
        
          <!--  Product - Bulk Organic Coconut Shreds - 2lb -->
          {% if product.id == 4383775588452 and block.type == 'coconut' %}
            <div>
              <div class="product-blocks" style="box-shadow: -3px 3px 6px 3px {{ block.settings.box_shadow_color }};">
                {% assign product_ob = all_products[block.settings.product_url] %}
                {% include 'product-card-grid-related' with product: product_ob %}
              </div>
            </div>
          {% endif %}
        
          <!--  Product - Bulk Almonds - 3lb  -->
          {% if product.id == 4383774507108 and block.type == 'almonds' %}
            <div>
              <div class="product-blocks" style="box-shadow: -3px 3px 6px 3px {{ block.settings.box_shadow_color }};">
                {% assign product_ob = all_products[block.settings.product_url] %}
                {% include 'product-card-grid-related' with product: product_ob %}
              </div>
            </div>
          {% endif %}
        
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  $('.ingredient-product-related').slick({
    dots: false,
    arrows: false,
    infinite: true,
    swipe:true,
    slidesToShow: 3,
    slidesToScroll: 3,
    centerMode: true,
    centerPadding: '40px',
    speed: 1000,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 1025,
        settings: {
          slidesToShow: 2          
        }
      },
      {
        breakpoint: 641,
        settings: {
          slidesToShow: 1
        }
      }
    ]
    //     adaptiveHeight: true
  });
</script>

