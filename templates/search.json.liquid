{% layout none %}
{% capture results %}
  {% for item in search.results %}
    {% assign article = item %}
    { 
      "title"    : {{ article.title | json }},
      "url"      : {{ article.url | json }},
      "thumbnail": {{ article.image.src | article_img_url: 'thumb' | json }}
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
{% endcapture %}
{
  "results_count": {{ search.results_count }},
  "results": [{{ results }}]
}