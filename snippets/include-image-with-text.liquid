<section class="image-text">
  
  <div class="desktop-only">
    {% if block.settings.background_image != blank %}
    <img class="lazyload" data-src="{{ block.settings.background_image | img_url: '1903x' }}" />
    {% endif %}
  </div>
  <div class="mobile-only">
    {% if block.settings.background_image_mobile != blank %}
    <img class="lazyload" data-src="{{ block.settings.background_image_mobile | img_url: '750x' }}" />
    {% endif %}
  </div>  
    
  <div class="position-{{ block.settings.text_position }} caption">
    
    <div class="caption-content align-{{ block.settings.text_align }}">
      
      {% if block.settings.title != blank %}
        <h1>
          {{ block.settings.title }}
        </h1>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <div class="subtitle">
          {{ block.settings.subtitle }}
        </div>
      {% endif %}
      {% if block.settings.content != blank %}
      	<p>{{ block.settings.content }}</p>
      {% endif %}
      
      {% if block.settings.one_link_button %}
        {% if block.settings.button != blank %}
        <a href="{{ block.settings.button_link }}" target="_blank">
          <input type="submit" class="btn main-btn" value="{{ block.settings.button }}">
        </a>
        {% endif %}
      {% else %}
        <div class="pre-order-version">
          {% if block.settings.button != blank %}
          <a href="{{ block.settings.button_link }}">
            <input type="submit" class="btn main-btn" value="{{ block.settings.button }}">
          </a>
          {% endif %}
        </div>
        <div class="none-pre-order-version">
          {% if block.settings.button != blank %}
          <a href="{{ block.settings.button_link_1 }}">
            <input type="submit" class="btn main-btn" value="{{ block.settings.button }}">
          </a>
          {% endif %}
        </div>
      {% endif %}
      
    </div>
    
  </div>
  
</section>